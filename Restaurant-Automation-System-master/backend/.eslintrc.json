{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules":{
        "semi": [
            "error",
            "never"
        ],
        "indent": [
            "error",
            4
        ],
        "comma-dangle": ["error", {
            "objects": "always"
        }],
        "object-curly-spacing": ["error", "always"],
        "array-bracket-spacing": ["error", "always"],
        "no-unused-vars": "off",
        "no-undef": "off"
    },
    "ignorePatterns": [
        "node_modules/**"
    ]
}
